{
  "name": "your-extension",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
      "vscode": "^1.0.0"
  },
  "main": "./out/extension.js",
  "contributes": {
      "commands": [
          {
              "command": "extension.createFolderAndFiles",
              "title": "Criar template de componente"
          }
      ],
      "menus": {
          "explorer/context": [
              {
                  "command": "extension.createFolderAndFiles",
                  "when": "explorerResourceIsFolder"
              }
          ]
      }
  },
  "scripts": {
      "vscode:prepublish": "tsc -p ./",
      "compile": "tsc -watch -p ./",
      "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
      "typescript": "^3.3.3",
      "vscode": "^1.1.28",
      "tslint": "^5.12.1",
      "@types/node": "^8.10.25",
      "@types/mocha": "^2.2.42"
  }
}
